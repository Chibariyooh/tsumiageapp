<!DOCTYPE html>
<html>
  <head>
    <title>Tsumiageapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>つみあげハウス大図鑑</h1>
    <div>
        <div style="text-align:right"><%= link_to 'マイページ', mypage_path %></div>
      <% if user_signed_in? %>
        <div style="text-align:right"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></div>
        <div><%= link_to 'Top', users_path %></div>
      <% else %>
        <div style="text-align:right"><%= link_to 'ログイン', new_user_session_path %></div>
        <div style="text-align:right"><%= link_to '新規登録', new_user_registration_path %></div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
