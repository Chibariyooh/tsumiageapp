<% if user_signed_in? && @user == current_user %>
    <h1>マイページ</h1>
    <%= link_to "プロフィール編集", edit_user_path(current_user) %>
    <%= link_to "ログインデータ編集", edit_user_registration_path(current_user) %>
<% else %>
    <h1>ユーザーページ</h1>
<% end %>

<h1><%= @user.username %></h1>
<div>挨拶文:<%= @user.pr_text %></div>
<div>Twitter:<%= @user.twitter_id %></div>
<div>Discord:<%= @user.discord_id %></div>
